{
  "name": "codestate-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "vite build --config vite.config.prod.ts && npm run copy-to-resources",
    "build:watch": "vite build --config vite.config.prod.ts --watch",
    "type-check": "tsc -b",
    "copy-to-resources": "cp dist/codesate-ui.css ../resources/ && cp dist/codesate-ui.iife.js ../resources/"
  },
  "dependencies": {
    "preact": "^10.27.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "typescript": "~5.8.3",
    "vite": "^7.1.2"
  }
}
